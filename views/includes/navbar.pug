unless minimal
	nav.navbar
		a.nav-item(href='/index.html')
			img(src='/file/home.png' alt='Home')
		a.nav-item(href='/boards.html')
			img(src='/file/boards.png' alt='Boards')
		if boardsList && boardsList.length > 0
			span.nav-item
				| #{'[ '}
				each board, i in boardsList
					a(href=`/${board}/`) #{board}
					if i != boardsList.length - 1
						|  / 
				| #{' ]'}
		a.nav-item(href='/overboard.html')
			img(src='/file/overboard.png' alt='Overboard')
		a.nav-item(href='/pages.html')
			img(src='/file/pages.png' alt='Pages')
		a.nav-item(href='/account.html')
			img(src='/file/account.png' alt='Account')
		if !modview && board
			a.nav-item(href=`/${board._id}/manage/${managePage || 'index.html'}`)
				img(src='/file/manage.png' alt='Manage')
		.nav-item.right#settings
			img(src='/file/settings.png' alt='Settings')
